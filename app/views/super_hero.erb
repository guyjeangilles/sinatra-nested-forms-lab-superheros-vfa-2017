  <body>
    <h1>Create a Team and Heroes!<h1>
      <form method='POST' action='/team'>
        <label>Team Name: <input type='text' name='team[name]'> </label>
        <label>Team Motto: <input type='text' name='team[motto]'> </label>
        <br>
        <label>Team Member 1 Name: <input id='member1_name' type='text' name='team[members][][name]'> </label>
        <label>Team Member 1 Power: <input id='member1_power' type='text' name='team[members][][power]'> </label>
        <label>Team Member 1 Bio: <input id='member1_bio' type='text' name='team[members][][bio]'> </label>
        <br>
        <label>Team Member 2 Name: <input id='member2_name' type='text' name='team[members][][name]'> </label>
        <label>Team Member 2 Power: <input id='member2_power' type='text' name='team[members][][power]'> </label>
        <label>Team Member 2 Bio: <input id='member2_bio' type='text' name='team[members][][bio]'> </label>
        <br>
        <label>Team Member 3 Name: <input id='member3_name' type='text' name='team[members][][name]'> </label>
        <label>Team Member 3 Power: <input id='member3_power' type='text' name='team[members][][power]'> </label>
        <label>Team Member 4 Bio: <input id='member3_bio' type='text' name='team[members][][bio]'> </label>
        <input type='submit' id='submit' value='submit'>
      </form>
  </body>
</html>
